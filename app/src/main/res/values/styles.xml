<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextView.Base" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/circular_std</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextView.28" parent="TextView.Base">
        <item name="android:textSize">@dimen/text_size_28</item>
    </style>

    <style name="TextView.12" parent="TextView.Base">
        <item name="android:textSize">@dimen/text_size_12</item>
    </style>

    <style name="TextView.14" parent="TextView.Base">
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <style name="TextView.17" parent="TextView.Base">
        <item name="android:textSize">@dimen/text_size_17</item>
    </style>

    <style name="TextView.22" parent="TextView.Base">
        <item name="android:textSize">@dimen/text_size_22</item>
    </style>

    <style name="TextView.40" parent="TextView.Base">
        <item name="android:textSize">@dimen/text_size_40</item>
    </style>

    <style name="EditText.Login" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/text_size_17</item>
        <item name="android:fontFamily">@font/circular_std</item>
        <item name="android:backgroundTint">@color/transparent_black_20</item>
        <item name="android:textColorHint">@color/transparent_black_20</item>
    </style>

    <style name="Button.Login" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">7dp</item>
        <item name="android:fontFamily">@font/circular_std</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/color_button_selector</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:padding">@dimen/padding_14</item>
    </style>

    <style name="Button.Logout" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">20dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black_100</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:fontFamily">@font/circular_std</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>